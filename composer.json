{
    "name": "coffeephp/extension",
    "description": "Auto-loads extensions that add functionality to PHP.",
    "license": "Apache-2.0",
    "version": "1.2.2",
    "type": "library",
    "readme": "README.md",
    "time": "2021-03-26",
    "authors": [
        {
            "name": "Danny Damsky",
            "email": "dannydamsky99@gmail.com"
        }
    ],
    "keywords": [
        "coffeephp",
        "coffee",
        "php",
        "extension"
    ],
    "require": {
        "php": ">=8.0",
        "ext-apcu": "*",
        "ext-mbstring": "*",
        "ext-uuid": "*"
    },
    "require-dev": {
        "coffeephp/quality-tools": "1.*",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "files": [
            "src/string.php",
            "src/mbstring.php",
            "src/throwable.php",
            "src/time.php",
            "src/var.php",
            "src/array.php",
            "src/uuid.php",
            "src/validation.php",
            "src/random.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "CoffeePhp\\Extension\\Test\\Unit\\": "test/Unit/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "apcu-autoloader": true,
        "platform": {
            "php": "8.0"
        },
        "platform-check": false
    },
    "scripts": {
        "coffeephp:exec:phpunit": "coffeephp_exec_phpunit --testsuite unit",
        "coffeephp:exec:psalm": "coffeephp_exec_psalm",
        "coffeephp:exec:publish": "coffeephp_exec_publish"
    }
}
