{
	"name": "coffeephp/extension",
	"description": "Auto-loads extensions that add functionality to PHP.",
	"license": "Apache-2.0",
	"authors": [
		{
			"name": "Danny Damsky",
			"email": "dannydamsky99@gmail.com"
		}
	],
	"keywords": [
		"coffeephp",
		"coffee",
		"php",
		"extension"
	],
	"require": {
		"php": ">=7.4",
		"ext-mbstring": "*",
		"ext-apcu": "*"
	},
	"require-dev": {
		"roave/security-advisories": "dev-master",
		"phpunit/phpunit": "9.*"
	},
	"autoload": {
		"files": [
			"src/string.php",
			"src/mbstring.php",
			"src/throwable.php",
			"src/time.php",
			"src/var.php",
			"src/array.php"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"CoffeePhp\\Extension\\Test\\Unit\\": "test/Unit/"
		}
	},
	"config": {
		"sort-packages": true,
		"optimize-autoloader": true,
		"apcu-autoloader": true
	}
}
